<header>
  <%= link_to image_tag('marvel_logo.png', alt: 'Marvel Logo', style: 'max-width: 300px;'), root_path %>

  <div style="margin: 20px 0;">
    <%= form_with url: comics_path, method: :get, local: true do |form| %>
      <div>
        <%= form.text_field :character, value: params[:character],placeholder: 'Type a character name...', style: 'width: 300px;' %>
      </div>
    <% end %>
  </div>
</header>
