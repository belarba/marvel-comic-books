<h1>Comics</h1>

<%= form_with url: comics_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :character, 'Search by Character:' %>
    <%= form.text_field :character %>
    <%= form.submit 'Search' %>
  </div>
<% end %>

<% @comics["data"]["results"].each do |comic| %>
  <div>
    <h3><%= comic["title"] %></h3>
    <img src="<%= comic["thumbnail"]["path"] %>.jpg" alt="<%= comic["title"] %> Cover" />
    <%= button_to 'Favorite', favorite_comic_path(comic["id"]), method: :post %>
  </div>
<% end %>
